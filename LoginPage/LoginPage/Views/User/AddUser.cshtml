
@model User


<div class="container col-6 border shadow">

	<h1>Login</h1>

	<div asp-validation-summary="All" class="text-danger" > </div>

	<form method="post">
		<div class="form-floating py-2">
			<input asp-for="Name" type="text" class="form-control" />
			<label asp-for="Name" class="form-label">Name</label>
			<span asp-validation-for="Name" class="text-danger" ></span>
		</div> 

		<div class="form-floating py-2">
			<input asp-for="Surname" type="text" class="form-control" />
			<label asp-for="Surname" class="form-label">Surname</label>
			<span asp-validation-for="Surname" class="text-danger"></span>
		</div>

		<div class="form-floating py-2">
			<input asp-for="Mail" type="email" class="form-control" />
			<label asp-for="Mail" class="form-label">Mail</label>
			<span asp-validation-for="Mail" class="text-danger"></span>
		</div>

		<div class="form-floating py-2">
			<input asp-for="Password" type="password" class="form-control" />
			<label asp-for="Password" class="form-label">Password</label>
			<span asp-validation-for="Password" class="text-danger" > </span>
		</div>
		<div class="py-2">
			<button type ="submit" class="btn btn-primary form-control"> Sign In</button>
		</div>
	</form>

</div>

@section Scripts {

	@{
	 <partial name="_ValidationScriptsPartial"></partial>

	}

}